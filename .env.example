# MangaDex API Configuration
MANGADEX_API_URL=https://api.mangadex.org
MANGADEX_UPLOADS_URL=https://uploads.mangadex.org

# Authentication (Optional - for authenticated features)
USERNAME=
PASSWORD=
CLIENT_ID=
CLIENT_SECRET=
REFRESH_TOKEN=

# Download Configuration
DOWNLOAD_DIR=./downloads
MAX_CONCURRENT_DOWNLOADS=10
CHUNK_SIZE=8192

# Rate Limiting (MangaDx allows ~5 req/s, we use 0.25s = 4 req/s to be safe)
RATE_LIMIT_DELAY=0.25
MAX_RETRIES=3
RETRY_DELAY=2.0

# Request Configuration
REQUEST_TIMEOUT=30
USER_AGENT=MangaDxDownloader/1.0

# Default Filters
DEFAULT_LANGUAGE=en
DEFAULT_CONTENT_RATING=safe,suggestive,erotica

# Logging
LOG_LEVEL=INFO
LOG_FILE=

# Cache Configuration
ENABLE_CACHE=true
CACHE_DIR=./.cache
CACHE_EXPIRY=3600

# Automatic Structure Updates
AUTO_UPDATE_STRUCTURE=true
